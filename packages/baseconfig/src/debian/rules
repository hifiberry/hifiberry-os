#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	install -D -m 755 hifiberry-baseconfig.py debian/hifiberry-baseconfig/usr/sbin/hifiberry-baseconfig
	install -D -m 755 cleanup-packages.py debian/hifiberry-baseconfig/usr/sbin/cleanup-packages
	install -D -m 644 man/hifiberry-baseconfig.8 debian/hifiberry-baseconfig/usr/share/man/man8/hifiberry-baseconfig.8
	install -D -m 644 man/cleanup-packages.8 debian/hifiberry-baseconfig/usr/share/man/man8/cleanup-packages.8
	install -D -m 644 services.conf debian/hifiberry-baseconfig/etc/hifiberry/baseconfig/services.conf
	install -D -m 644 configfiles.conf debian/hifiberry-baseconfig/etc/hifiberry/baseconfig/configfiles.conf
	install -D -m 644 command.conf debian/hifiberry-baseconfig/etc/hifiberry/baseconfig/command.conf
	install -D -m 644 cleanup-packages.conf debian/hifiberry-baseconfig/etc/hifiberry/baseconfig/cleanup-packages.conf

override_dh_auto_build:
	# No build required

override_dh_auto_test:
	# No tests required
