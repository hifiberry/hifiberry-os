#!/bin/sh
ARGS="-o default -M HiFiBerry -N /var/lib/squeezelite/squeezelite.name -a 10240:10240:24_3:0 -C 1 -r 192000"

if [ -f /etc/squeezelite.json ]; then
 SERVER=`jq .server.value /etc/squeezelite.json | sed s/\"//g` 2>/dev/null
 if [ "$SERVER" != "" ]; then
  ARGS="$ARGS -s $SERVER"
 fi
fi

/usr/bin/squeezelite $ARGS
