[Unit]
Description=Shairport Sync - AirPlay Audio Receiver
Documentation=man:shairport-sync(1) https://github.com/mikebrady/shairport-sync
After=sound.target network.target
Wants=nqptp.service
After=nqptp.service 
After=pipewire.service

[Service]
Type=simple
User=shairport-sync
Group=shairport-sync
ExecStart=/usr/bin/start-shairport
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target