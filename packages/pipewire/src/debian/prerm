#!/bin/bash
set -e

case "$1" in
    remove|upgrade|deconfigure)
        # If we're removing the package (not upgrading), backup configurations
        if [ "$1" = "remove" ]; then
            # Backup PipeWire configuration if it exists and was customized
            if [ -f /etc/pipewire/pipewire.conf ] && [ -f /etc/pipewire/pipewire.conf.default ]; then
                if ! cmp -s /etc/pipewire/pipewire.conf /etc/pipewire/pipewire.conf.default; then
                    echo "Backing up customized PipeWire configuration..."
                    mv /etc/pipewire/pipewire.conf /etc/pipewire/pipewire.conf.bak
                fi
            fi
            
            # Check if we have a symlink and a backup for ALSA
            if [ -L /etc/asound.conf ] && [ -f /etc/asound.conf.bak ]; then
                # Remove the symlink
                rm -f /etc/asound.conf
                # Restore the original
                mv /etc/asound.conf.bak /etc/asound.conf
                echo "Restored original ALSA configuration."
            elif [ -L /etc/asound.conf ]; then
                # Just remove the symlink if there's no backup
                rm -f /etc/asound.conf
            fi
        fi
        # Let debhelper handle systemd service management
        ;;
    
    failed-upgrade)
        ;;
    
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
